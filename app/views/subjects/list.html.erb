<div class="subject list">
	<h2>Subjects</h2>
	
	<table class="listing">
		<tr class="table__header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>

		<% @subjects.each do |subject| %>
			<tr>
				<td><%= subject.position %></td>
				<td><%= subject.name %></td>
				<td class="center"><%= subject.visible ? 'Yes' : 'No' %></td>
				<td class="center"><%= subject.pages.size %></td>
				<td class="actions">
					<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show') %> &middot; 
					<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>  &middot; 
					<%= link_to("Delete", '#', :class => 'action delete') %>
				</td>
			</tr>
		<% end %>
	</table>

</div>